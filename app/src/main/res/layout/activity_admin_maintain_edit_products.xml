<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".admin.AdminMaintainEditProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_product_name_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/input_design"
            android:hint="Product Name"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/edit_product_image_v"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/edit_product_name_v"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/edit_product_price_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_image_v"
            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:hint="Product price"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edit_product_description_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_price_v"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/input_design"
            android:hint="Product Description"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="16dp" />

        <Button
            android:id="@+id/edit_products_btn_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_description_v"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/delete_products_btn_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_products_btn_v"
            android:text="Delete this product"
            android:textAlignment="center"
            android:textSize="16dp"
            android:padding="12dp"
            android:layout_margin="30dp"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"


            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>